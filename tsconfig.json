{
  "compilerOptions": {
    "rootDir": "./src/",
    "baseUrl": "./src",
    "paths": {
      "*": ["@types/*"]
    },
    "outDir": "./lib/",

    "declaration": true,
    "downlevelIteration": false,
    "experimentalDecorators": true,
    "importHelpers": false,
    "inlineSources": true,
    "lib": ["dom", "es5", "es2015.core", "es2015.iterable", "es2015.promise", "es2015.symbol", "es2015.symbol.wellknown", "es2015.proxy"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "plugins": [],
    "removeComments": false,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "module": "esnext",

    "composite": true,

    // "noImplicitThis": true,
    // "alwaysStrict": true,
    // "strictBindCallApply": true,
    // "strictNullChecks": true,
    // "strictFunctionTypes": true,
    // "experimentalDecorators": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,

    // "pretty": true,
    // "noErrorTruncation": false,

    "allowSyntheticDefaultImports": true
    // "noFallthroughCasesInSwitch": true,
    // "noImplicitReturns": true,
    // // "moduleResolution": "node",
    // "esModuleInterop": true
  },
  "exclude": ["node_modules", "lib"],
  "include": ["src/**/*.ts"]
}
